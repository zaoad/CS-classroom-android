<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnnouncementActivity">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/edit_txt_announcement_activity"
        android:layout_above="@+id/send_btn_announcement_activity" />
    <ImageButton
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_menu_send"
        android:id="@+id/send_btn_announcement_activity"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/footer_classroom_announcement_activity">

        <ImageButton
            android:layout_width="103dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/baseline_home_24px"
            android:id="@+id/home_btn_classroom_announcement_activity"/>

        <ImageButton
            android:layout_width="103dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/baseline_forum_24px"
            android:id="@+id/forum_btn_classroom_announcement_activity"/>

        <ImageButton
            android:layout_width="103dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/baseline_people_24px"
            android:id="@+id/people_btn_classroom_announcement_activity"/>

    </LinearLayout>

</RelativeLayout>