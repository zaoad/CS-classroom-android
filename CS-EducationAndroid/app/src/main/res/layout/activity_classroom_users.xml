<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassroomUsersActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/course_name_id_layout_classroom_user"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/course_name_classroom_user_activity"
            android:text="CSE-4102: AI"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/class_code_classroom_user_activity"
            android:text="122222222222222222"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_weight="1"/>
        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/activity_classroom_users_student_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Students List: "
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course_name_id_layout_classroom_user"
        android:id="@+id/recycleview_classroom_user_activity">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/footer_classroom_feed_activity"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/baseline_home_24px"
            android:id="@+id/home_btn_classroom_user_activity"/>
        <ImageButton
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/baseline_forum_24px"
            android:id="@+id/forum_btn_classroom_user_activity"/>
        <ImageButton
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/people_btn_classroom_user_activity"
            android:src="@drawable/baseline_people_24px"/>
    </LinearLayout>
</RelativeLayout>