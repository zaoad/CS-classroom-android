<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinClassActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear_layout_join_class_activity"
        android:layout_above="@+id/submit_btn_join_class_acitvity">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/join_code_join_class_activity"
            android:text="Join Code:"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textAlignment="center"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/join_code_edtxt_join_class_activity"
            android:text=""
            android:layout_weight="3"
            android:textAlignment="center"/>
    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/submit_btn_join_class_acitvity"
        android:layout_centerInParent="true"
        android:text="Submit"
        android:textColor="@color/button"
        android:background="@drawable/button"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/join_msg_join_class_activity"
        android:textAlignment="center"
        android:layout_alignParentTop="true" />
</RelativeLayout>