<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassroomFeedActivity">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycleview_classroom_feed_activity">
    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/annoucement_fab_classroom_feed_activity"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/footer_classroom_feed_activity"
        android:src="@drawable/baseline_announcement_24px"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/footer_classroom_feed_activity">
        <ImageButton
            android:layout_width="103dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/baseline_home_24px"
            android:id="@+id/home_btn_classroom_activity"/>
        <ImageButton
            android:layout_width="103dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/baseline_forum_24px"
            android:id="@+id/forum_btn_classroom_activity"/>
        <ImageButton
            android:layout_width="103dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/people_btn_classroom_activity"
            android:src="@drawable/baseline_people_24px"/>


    </LinearLayout>
</RelativeLayout>